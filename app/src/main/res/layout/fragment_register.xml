<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment_register">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/image_wave"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/extra_huge_margin"
                android:hint="@string/nama"
                android:layout_marginTop="@dimen/screen_margin"
                android:layout_marginStart="@dimen/screen_margin"
                android:layout_marginEnd="@dimen/screen_margin"
                android:background="@drawable/bg_textbox"
                android:paddingVertical="@dimen/view_height"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView"
                app:boxBackgroundColor="@color/white"
                app:boxStrokeColor="@color/white"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Editname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/label"
                    android:background="@color/bg"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textAppearance="@style/TextAppearance.Body2"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/user"
                android:layout_width="match_parent"
                android:layout_height="@dimen/extra_huge_margin"
                android:hint="@string/user"
                android:layout_marginTop="@dimen/screen_margin"
                android:layout_marginStart="@dimen/screen_margin"
                android:layout_marginEnd="@dimen/screen_margin"
                android:background="@drawable/bg_textbox"
                android:paddingVertical="@dimen/view_height"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/name"
                app:boxBackgroundColor="@color/white"
                app:boxStrokeColor="@color/white"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Edituser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/label"
                    android:background="@color/bg"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textAppearance="@style/TextAppearance.Body2"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="@dimen/extra_huge_margin"
                android:hint="@string/gmail"
                android:layout_marginTop="@dimen/screen_margin"
                android:layout_marginStart="@dimen/screen_margin"
                android:layout_marginEnd="@dimen/screen_margin"
                android:background="@drawable/bg_textbox"
                android:paddingVertical="@dimen/view_height"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/user"
                app:boxBackgroundColor="@color/white"
                app:boxStrokeColor="@color/white"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Editemail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/label"
                    android:background="@color/bg"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textAppearance="@style/TextAppearance.Body2"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/pass"
                android:layout_width="match_parent"
                android:layout_height="@dimen/extra_huge_margin"
                android:layout_marginTop="@dimen/screen_margin"
                android:hint="@string/pass"
                android:layout_marginStart="@dimen/screen_margin"
                android:layout_marginEnd="@dimen/screen_margin"
                android:background="@drawable/bg_textbox"
                android:paddingVertical="@dimen/view_height"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/email"
                app:passwordToggleEnabled="true"
                app:boxBackgroundColor="@color/white"
                app:boxStrokeColor="@color/white"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Editpass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/bg"
                    android:textColor="@color/label"
                    android:inputType="textPassword"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textAppearance="@style/TextAppearance.Body2"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/confirm"
                android:layout_width="match_parent"
                android:layout_height="@dimen/extra_huge_margin"
                android:layout_marginTop="@dimen/screen_margin"
                android:hint="@string/konfirm"
                android:layout_marginStart="@dimen/screen_margin"
                android:layout_marginEnd="@dimen/screen_margin"
                android:background="@drawable/bg_textbox"
                android:paddingVertical="@dimen/view_height"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pass"
                app:passwordToggleEnabled="true"
                app:boxBackgroundColor="@color/white"
                app:boxStrokeColor="@color/white"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Editconfirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/bg"
                    android:textColor="@color/label"
                    android:inputType="textPassword"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textAppearance="@style/TextAppearance.Body2"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/rbutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/jl"
                android:layout_marginLeft="@dimen/screen_margin"
                android:layout_marginTop="@dimen/screen_margin"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/confirm"
                android:textAppearance="@style/TextAppearance.Body2"/>

            <RadioGroup
                android:id="@+id/radiogroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/rbutton"
                app:layout_constraintStart_toStartOf="parent">

                <RadioButton
                    android:id="@+id/boy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/medium_margin"
                    android:text="@string/laki"
                    android:layout_marginLeft="@dimen/screen_margin"
                    android:textColor="@color/label"
                    android:checked="true"
                    android:textAppearance="@style/TextAppearance.Body2"/>

                <RadioButton
                    android:id="@+id/girl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cewe"
                    android:layout_marginLeft="@dimen/screen_margin"
                    android:textColor="@color/label"
                    android:layout_margin="@dimen/medium_margin"
                    android:textAppearance="@style/TextAppearance.Body2"/>

            </RadioGroup>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/button_padding_vertical"
                android:layout_marginEnd="@dimen/screen_margin"
                android:layout_marginStart="@dimen/screen_margin"
                android:text="@string/daftar"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:backgroundTint="@color/main"
                app:layout_constraintTop_toBottomOf="@+id/radiogroup"
                app:cornerRadius="@dimen/corner"
                android:textAppearance="@style/TextAppearance.Button"/>

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/div"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/rating_bar_height"
                app:layout_constraintTop_toBottomOf="@+id/submit"
                app:layout_constraintStart_toEndOf="@+id/Tdiv"/>

            <TextView
                android:id="@+id/Tdiv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/Tdiv"
                android:layout_marginEnd="@dimen/Tdiv"
                android:text="@string/atau"
                android:textAlignment="center"
                android:background="@color/white"
                android:textColor="@color/label"
                android:layout_marginTop="@dimen/rating_bar_height"
                app:layout_constraintTop_toBottomOf="@+id/submit"
                app:layout_constraintBottom_toTopOf="@+id/div"
                android:textAppearance="@style/TextAppearance.Caption1"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/google"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/normal_margin"
                android:layout_marginTop="@dimen/medium_margin"
                android:layout_marginEnd="@dimen/screen_margin"
                android:layout_marginStart="@dimen/screen_margin"
                android:backgroundTint="@color/white"
                android:textColor="@color/label"
                android:fontFamily="@font/roboto"
                android:text="@string/google"
                android:drawableLeft="@drawable/icon_google"
                app:layout_constraintTop_toBottomOf="@+id/Tdiv"
                app:cornerRadius="@dimen/corner"/>

            <TextView
                android:id="@+id/backL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/medium_margin"
                android:text="@string/backL"
                android:textAlignment="center"
                android:textColor="@color/label"
                app:layout_constraintTop_toBottomOf="@+id/google"
                android:textAppearance="@style/TextAppearance.Caption1"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</FrameLayout>