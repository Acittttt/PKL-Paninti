<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/weather">


        <TextView
            android:id="@+id/day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/day"
            android:textColor="@color/white"
            android:textAppearance="@style/TextAppearance.Title"
            android:layout_marginTop="@dimen/rating_bar_height"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="@dimen/icon_bookmark_height"/>

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/large_margin"
            android:src="@drawable/icon_google"
            android:layout_marginStart="@dimen/extra_medium"
            android:layout_marginTop="@dimen/avatar_stack_space"
            app:layout_constraintStart_toStartOf="@+id/day"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/option_button_height"
            android:layout_marginTop="@dimen/rating_bar_height"
            android:text="@string/weather"
            android:textAppearance="@style/TextAppearance.Maven"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@+id/icon"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/temperatur"
            android:textColor="@color/white"
            android:textAppearance="@style/TextAppearance.Body"
            android:layout_marginTop="@dimen/rating_bar_height"
            android:layout_marginStart="@dimen/large_start"
            app:layout_constraintStart_toStartOf="@+id/weather"
            app:layout_constraintTop_toTopOf="parent"
            />




</androidx.constraintlayout.widget.ConstraintLayout>